@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <div class="mt-2 d-flex" style="justify-content:flex-end">
        <a asp-controller="category" asp-action="create" class="btn btn-success btn-icon-text">
            <i class="mdi mdi-upload btn-icon-prepend"></i>
            Create
        </a>
    </div>
    <table class="table table-dark mt-4">
                      <thead>
                        <tr>
                          <th>
                            #
                          </th>
                          <th>
                            Category name
                          </th>
                          <th>
                            Flower count
                          </th>
                          <th>
                            Settings
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                        @foreach (Category category in Model)
                       {
                           <tr>
                          <td>
                            @category.Id
                          </td>
                          <td>
                            @category.Name
                          </td>
                          <td>
                            @category.FlowerCategories.Count
                          </td>
                          <td>
                        <a asp-controller="category" asp-action="edit" asp-route-id="@category.Id" class="btn btn-warning btn-icon-text">
                            <i class="mdi mdi-file-check btn-icon-append"></i>
                            Edit
                        </a>
                        <a asp-controller="category" asp-action="delete"  asp-route-id="@category.Id" class="btn btn-danger btn-icon-text">
                            <i class="mdi mdi-alert btn-icon-prepend"></i>
                            Delete
                        </a>
                    </td>
                        </tr>
                       }
                        
                      </tbody>
                    </table>

   <div class="row justify-content-center mt-4">
        <nav aria-label="...">
            <ul class="pagination" style="justify-content:center">
                
                    <li class="page-item @(ViewBag.Currentpage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-controller="category" asp-action="index" asp-route-page="@(ViewBag.CurrentPage-1)">Previous</a>
                    </li>
                
                @for (int i = 1; i <= ViewBag.TotalPage; i++)
                {
                    <li class="page-item  @(ViewBag.CurrentPage == i ? "active" : "")" style="pointer-events: @(ViewBag.CurrentPage == i ? "none" : "")"><a class="page-link" asp-controller="category" asp-action="index" asp-route-page="@i">@i</a></li>
                }

                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPage ? "disabled" : "")">
                    <a class="page-link" asp-controller="category" asp-action="index" asp-route-page="@(ViewBag.CurrentPage +1)">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>